.med-divider

.gallery-container
  .filter-bar
    .empty
    .filter
      li data-filter="1" #{ t('.video_label') }
      li.active data-filter="all" #{ t('.all_label') }
      li data-filter="2" #{ t('.photo_label') }
    .search-box
      = image_tag image_path('search-icon.png'), class: 'search-icon'
      input.filtr-search data-search="" name="filtr-search"
  .filtr-container
    - @gallery_items.each do |item|
      .filtr-item data-category="#{ item.is_video? ? '1' : '2' }"
        = image_tag item.thumbnail, class: "item-image #{ item.is_video? ? '1' : '2' }"
        a.gallery-play href=item.url data-title=item.title.capitalize data-rel="lightcase:myCollection"
        - if item.is_video?
          .gallery-play-icon-block
          .gallery-play-icon
        span.item-title= item.title

= will_paginate @compositions, renderer: BootstrapPagination::Rails

.med-divider.small
